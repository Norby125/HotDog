<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NorbisHotDog.Pages.LoginPage"
             BackgroundImage="hotdog_background">
  <ContentPage.Content>
    <StackLayout
      Orientation="Vertical" Padding="20" Spacing="30">
      <BoxView HeightRequest="10"/>
      <Image HorizontalOptions="Center" WidthRequest="300" Source="hotdog"></Image>
      <Frame BackgroundColor="#BF043055" HasShadow="False">
        <StackLayout Orientation="Vertical" Spacing="10">
          <Entry x:Name="UserNameEntry" Text="{Binding UserName}" Placeholder="Email" HeightRequest="40" TextColor="Black"></Entry>
          <Entry x:Name="PasswordEntry" Text="{Binding Password}" Placeholder="Password" HeightRequest="40" TextColor="Black"></Entry>
        </StackLayout>
      </Frame>
      <Button Clicked="Button_OnClicked" Text="Login" TextColor="White" FontAttributes="Bold" FontSize="20" HorizontalOptions="FillAndExpand" BackgroundColor="#f49131"></Button>
      
      
    </StackLayout>
  </ContentPage.Content>
</ContentPage>